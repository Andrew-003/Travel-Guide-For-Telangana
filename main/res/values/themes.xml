<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelTourist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<style name="AppTheme" parent="Theme.TravelTourist">
    </style>
    <style name="ShapeableImageView_ALLRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeableImageView_BOTTOMRoundedCorners" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">35dp</item>
    </style>
    


    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item> <!-- Set background image or color -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SmallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">2dp</item> <!-- Small margin for top -->
    </style>
   <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
    <item name="android:textColor">#000000</item> <!-- Set text color to black -->
</style>
   <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
	<!-- Fullscreen settings -->
	<item name="android:windowFullscreen">true</item>
	<item name="android:windowNoTitle">false</item>
	<item name="android:statusBarColor">@android:color/transparent</item>
	<item name="android:windowTranslucentStatus">true</item>
	<item name="android:fitsSystemWindows">false</item>
	</style>

</resources>


