<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/white">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <ImageView
             android:layout_height="200dp"
             android:layout_width="match_parent"
             android:scaleType="centerCrop"
             android:id="@+id/hotel_detail_image" />

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginTop="16dp"
             android:layout_marginStart="8dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textAlignment="center"
                 android:padding="16dp"
                 android:textSize="24sp"
                 android:textColor="@color/black"
                 android:id="@+id/hotel_detail_name"
                 android:text="Hotel Name"
                 android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Facilities"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_restaurant"
                             android:layout_height="24dp"
                             android:layout_width="24dp" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:layout_marginStart="8dp"
                             android:text="Stay in Hotel" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="horizontal">

                        <ImageView
                             android:layout_height="24dp"
                             android:layout_width="24dp"
                            android:src="@drawable/ic_parking" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:layout_marginStart="8dp"
                             android:text="Parking Area" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Description"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="14sp"
                     android:textColor="@color/black"
                     android:id="@+id/hotel_detail_desc"
                     android:text="Duis tellus metus, elementum a lectus id, aliquet interdum mauris. Nam bibendum efficitur sollicitudin..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Details"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="14sp"
                     android:textColor="@color/black"
                     android:text="Rating: 4.2"
                     android:id="@+id/hotel_detail_rating" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:padding="16dp"
                     android:textSize="14sp"
                     android:textColor="@color/black"
                     android:text="Phone Number: 7856734129"
                     android:id="@+id/hotel_detail_ph_num" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Address"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/hotel_detail_address"
                     android:text="14321 Saddle Wood Dr, North Little Rock, AR, 72117" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Expenses"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/hotel_detail_price"
                     android:text=" Price Range: 721/- to 1250/- Rs" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="View More"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_margin="4dp"
                         android:backgroundTint="@color/button_blue"
                         android:id="@+id/hotel_detail_show_imagesHotel"
                         android:text="Show Images" />

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:layout_margin="4dp"
                         android:backgroundTint="@color/button_blue"
                         android:id="@+id/hotel_detail_show_Map"
                         android:text="Show Hotel On Map" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Nearby Attractions"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="360dp"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:id="@+id/hotel_detail_nearby_attarctions_recyclerview" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:visibility="gone"
                     android:padding="16dp"
                     android:textSize="12sp"
                     android:textColor="@color/black"
                     android:id="@+id/hotel_detail_nearby_attractions_empty_tv"
                     android:text="No Attractions Found" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Nearby Restaurants"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="450dp"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:id="@+id/hotel_detail__nearby_restaurants_recyclerview" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:visibility="gone"
                     android:padding="16dp"
                     android:textSize="12sp"
                     android:textColor="@color/black"
                     android:id="@+id/hotel_detail_nearby_restaurants_empty_tv"
                     android:text="No Restaurants Found" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:layout_marginEnd="8dp"
             android:layout_marginStart="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Amenities"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1px"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Amenities"
                     android:id="@+id/hotel_detail_amenities" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>