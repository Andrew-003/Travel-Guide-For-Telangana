<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_marginBottom="16dp"
     android:backgroundTint="@color/white"
     app:cardCornerRadius="8dp">

    <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:paddingEnd="16dp"
         android:background="?attr/selectableItemBackground"
         android:layout_margin="7dp"
         android:paddingBottom="16dp"
         android:paddingStart="16dp"
         android:id="@+id/carditem"
         android:paddingTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
             android:layout_height="65dp"
             android:layout_width="65dp"
             android:scaleType="fitCenter"
             android:layout_centerVertical="true"
             app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners"
             android:layout_alignParentStart="true"
             android:id="@+id/place_image" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_toEndOf="@id/place_image"
             android:textSize="18sp"
             android:fontFamily="@font/nunito_sans_extrabold"
             android:textColor="@color/black"
             android:layout_marginStart="36dp"
             android:layout_alignTop="@id/place_image"
             android:id="@+id/place_name"
             android:text="Agra" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_toEndOf="@id/place_image"
             android:layout_below="@id/place_name"
             android:textSize="16sp"
             android:fontFamily="@font/nunito_sans_bold"
             android:textColor="#CC000000"
             android:layout_marginTop="4dp"
             android:layout_marginStart="36dp"
             android:id="@+id/place_rating"
             android:text="Rating: 4.5" />

        <androidx.cardview.widget.CardView
             android:layout_height="44dp"
             android:layout_width="44dp"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             app:cardBackgroundColor="#1A000000"
             app:cardCornerRadius="16dp"
             android:id="@+id/card_arrow">

            <ImageView
                 android:layout_height="28dp"
                 android:layout_width="28dp"
                 android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>