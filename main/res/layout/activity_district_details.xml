<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/white">

    <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="3dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="16dp"
             android:gravity="center"
             android:fontFamily="@font/nunito_sans_bold"
             android:textSize="28sp"
             android:textColor="@color/black"
             android:layout_marginTop="12dp"
             android:id="@+id/districtName"
             android:text="Hyderabad" />

        <ImageView
             android:layout_height="295dp"
             android:layout_width="match_parent"
             android:layout_below="@id/districtName"
             android:id="@+id/districtBg" />

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_below="@+id/districtBg"
             app:cardElevation="6dp"
             app:cardBackgroundColor="@color/white"
             android:layout_marginTop="16dp"
             app:cardCornerRadius="12dp"
             android:id="@+id/districtCard">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:padding="16dp"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:textAlignment="center"
                     android:fontFamily="@font/nunito_sans"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/districtDescription"
                     android:text="Hyderabad, the capital city of Telangana, is known for its rich history, culture, and delicious cuisine." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_below="@+id/districtCard"
             android:fontFamily="@font/nunito_sans_bold"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:layout_marginTop="24dp"
             android:layout_marginStart="8dp"
             android:id="@+id/topAttractionsTitle"
             android:text="Top Attractions to Visit" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginEnd="4dp"
             android:layout_alignParentEnd="true"
             android:textColor="@color/holo_blue_link"
             android:layout_alignTop="@+id/topAttractionsTitle"
             android:id="@+id/seeAllAttractionsDistrict"
             android:text="@string/link_seeall" />

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="280dp"
             android:layout_width="match_parent"
             android:layout_below="@+id/topAttractionsTitle"
             android:layout_marginEnd="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="16dp"
             android:layout_marginStart="8dp"
             android:id="@+id/topAttractionsRecyclerViewDistrict" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_below="@+id/topAttractionsRecyclerViewDistrict"
             android:fontFamily="@font/nunito_sans_bold"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:layout_marginTop="24dp"
             android:layout_marginStart="8dp"
             android:id="@+id/topHotelsTitle"
             android:text="Top Hotels to Stay In" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginEnd="4dp"
             android:layout_alignParentEnd="true"
             android:textColor="@color/holo_blue_link"
             android:layout_alignTop="@+id/topHotelsTitle"
             android:id="@+id/seeAllHotelsDistrict"
             android:text="@string/link_seeall" />

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="390dp"
             android:layout_width="match_parent"
             android:layout_below="@+id/topHotelsTitle"
             android:layout_marginEnd="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="16dp"
             android:layout_marginStart="8dp"
             android:id="@+id/topHotelsRecyclerViewDistrict" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_below="@+id/topHotelsRecyclerViewDistrict"
             android:fontFamily="@font/nunito_sans_bold"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:layout_marginTop="24dp"
             android:id="@+id/topRestaurantsTitle"
             android:text="Top Restaurants to Dine In" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginEnd="4dp"
             android:layout_alignParentEnd="true"
             android:textColor="@color/holo_blue_link"
             android:layout_alignTop="@+id/topRestaurantsTitle"
             android:id="@+id/seeAllRestaurantsDistrict"
             android:text="@string/link_seeall" />

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="450dp"
             android:layout_width="match_parent"
             android:layout_below="@+id/topRestaurantsTitle"
             android:layout_marginEnd="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="16dp"
             android:layout_marginStart="8dp"
             android:id="@+id/topRestaurantsRecyclerViewDistrict" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_below="@+id/topRestaurantsRecyclerViewDistrict"
             android:layout_margin="24dp"
             android:fontFamily="@font/nunito_sans_bold"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:textStyle="bold"
             android:id="@+id/transportationTitle"
             android:text="Transportation" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_below="@+id/transportationTitle"
             android:padding="8dp"
             android:layout_margin="8dp"
             android:orientation="vertical">

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp"
                 android:padding="8dp"
                 android:layout_marginTop="16dp"
                 android:id="@+id/byBusCard">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="8dp"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="16sp"
                         android:textColor="@color/desc_color"
                         android:id="@+id/tv_bus_description"
                         android:text="Adilabad is well-connected by TSRTC and private bus services." />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_from_hyderabad_title"
                         android:text="From Hyderabad"
                         android:textStyle="bold" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/tv_operator"
                         android:text="Operator: TSRTC" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/tv_pickup_points"
                         android:text="Pickup Points: MGBS, JBS" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/tv_journey_time"
                         android:text="Journey Time: 6-7 hours" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_nearby_cities_title"
                         android:text="From Nearby Cities"
                         android:textStyle="bold" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/tv_nearby_cities"
                         android:text="Nizamabad, Karimnagar, Warangal" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:autoLink="web"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_online_booking"
                         android:text="Online Booking: tsrtconline.in" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:padding="8dp"
                 android:layout_margin="8dp"
                 android:id="@+id/byTrainCard">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="8dp"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="16sp"
                         android:textColor="@color/desc_color"
                         android:id="@+id/tv_train_description"
                         android:text="Adilabad has a railway station on the Nanded-Hyderabad line." />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_station_name"
                         android:text="Station: Adilabad Railway Station (ADB)" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_direct_trains_title"
                         android:text="Direct Trains To:"
                         android:textStyle="bold" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/tv_direct_trains"
                         android:text="Hyderabad, Nanded, Nagpur" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_nearest_station"
                         android:text="Nearest Major Station: Nizamabad" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:autoLink="web"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:layout_marginTop="8dp"
                         android:id="@+id/tv_train_online_booking"
                         android:text="Online Booking: irctc.co.in" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>