<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_margin="5dp"
     android:backgroundTint="@color/white"
     app:cardCornerRadius="8dp">

    <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:paddingEnd="16dp"
         android:background="?attr/selectableItemBackground"
         android:layout_margin="7dp"
         android:paddingBottom="16dp"
         android:paddingStart="16dp"
         android:id="@+id/carditem"
         android:paddingTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
             android:layout_height="99dp"
             android:layout_width="99dp"
             android:scaleType="centerCrop"
             android:layout_centerVertical="true"
             app:shapeAppearanceOverlay="@style/ShapeableImageView_ALLRoundedCorners"
             android:layout_alignParentStart="true"
             android:id="@+id/district_image_list" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_toEndOf="@id/district_image_list"
             android:textSize="16sp"
             android:fontFamily="@font/nunito_sans_extrabold"
             android:textColor="@color/black"
             android:layout_marginTop="20dp"
             android:layout_marginStart="20dp"
             android:layout_alignTop="@id/district_image_list"
             android:id="@+id/district_name_list"
             android:text="District Name" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_toEndOf="@id/district_image_list"
             android:layout_below="@id/district_name_list"
             android:textSize="11sp"
             android:fontFamily="@font/nunito_sans_bold"
             android:textColor="#aaa"
             android:layout_marginTop="20dp"
             android:layout_marginStart="20dp"
             android:id="@+id/district_sub_description_list"
             android:text="Description:" />

        <ImageView
             android:layout_height="28dp"
             android:layout_width="28dp"
             android:layout_marginEnd="1dp"
             android:background="@drawable/ic_arrow_down"
             android:rotation="270"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             android:layout_gravity="center" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>