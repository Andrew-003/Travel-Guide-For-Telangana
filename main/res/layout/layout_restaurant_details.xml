<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#FFFFFF"
     android:orientation="vertical">

    <ScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:fillViewport="true">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical">

            <ImageView
                 android:layout_height="300dp"
                 android:layout_width="match_parent"
                 android:scaleType="centerCrop"
                 android:id="@+id/rest_detail_main_image" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_margin="16dp"
                 android:textSize="24sp"
                 android:textColor="#000000"
                 android:id="@+id/rest_detail_location_title"
                 android:text="New York, United States"
                 android:textStyle="bold" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:baselineAligned="false"
                 android:layout_marginTop="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_weight="1">

                    <ImageView
                         android:layout_height="24dp"
                         android:layout_width="24dp"
                         android:src="@drawable/ic_star"
                         android:background="#FFFFFF"
                         android:id="@+id/rest_detail_star_icon" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="18sp"
                         android:textColor="#FFCC00"
                         android:id="@+id/rest_detail_average_rating"
                         android:text="4.5" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="12sp"
                         android:textColor="#000000"
                         android:id="@+id/rest_detail_rating_label"
                         android:text="Average rating" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_weight="1">

                    <ImageView
                         android:layout_height="24dp"
                         android:layout_width="24dp"
                         android:src="@drawable/ic_restaurant"
                         android:id="@+id/rest_detail_restaurant_icon" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="18sp"
                         android:textColor="#FF4081"
                         android:id="@+id/rest_detail_availability"
                         android:text="OPEN" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="12sp"
                         android:textColor="#000000"
                         android:id="@+id/rest_detail_restaurant_label"
                         android:text="Restaurant Available" />

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_weight="1">

                    <ImageView
                         android:layout_height="24dp"
                         android:layout_width="24dp"
                         android:src="@drawable/ic_parking"
                         android:id="@+id/rest_detail_parking_icon" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="18sp"
                         android:textColor="#FF4081"
                         android:id="@+id/rest_detail_parking_availability"
                         android:text="AVAILABLE" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textSize="12sp"
                         android:textColor="#000000"
                         android:id="@+id/rest_detail_parking_label"
                         android:text="Vehicle Parking" />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Description"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_description"
                         android:text="Duis tellus metus, elementum a lectus id, aliquet interdum mauris." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Details"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_rating"
                         android:text="Rating: 4.2" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:padding="16dp"
                         android:textSize="14sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_phone_number"
                         android:text="Phone Number: 7856734129" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Address"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="16sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_address"
                         android:text="14321 Saddle Wood Dr, North Little Rock, AR, 72117" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Amenities"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="16sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_amenities"
                         android:text="Free WiFi, Parking" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Expenses"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="16sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_price"
                         android:text="Price Range: 721 to 1250 Rs" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Nearby Attractions"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <androidx.recyclerview.widget.RecyclerView
                         android:layout_height="360dp"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:id="@+id/rest_detail_nearby_attractions_recyclerview" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:visibility="gone"
                         android:padding="16dp"
                         android:textSize="12sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_nearby_attractions_empty_tv"
                         android:text="No Attractions Found" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="Nearby Hotels"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <androidx.recyclerview.widget.RecyclerView
                         android:layout_height="400dp"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:id="@+id/rest_detail_nearby_hotels_rescyclerview" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:visibility="gone"
                         android:padding="16dp"
                         android:textSize="12sp"
                         android:textColor="@color/black"
                         android:id="@+id/rest_detail_nearby_hotels_empty_tv"
                         android:text="No Hotels Found" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_margin="8dp">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:orientation="vertical">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:textSize="18sp"
                         android:textColor="@color/black"
                         android:text="View More"
                         android:textStyle="bold" />

                    <View
                         android:layout_height="1px"
                         android:layout_width="match_parent"
                         android:background="@color/desc_color" />

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="16dp"
                         android:orientation="vertical">

                        <Button
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:backgroundTint="@color/button_blue"
                             android:layout_marginTop="8dp"
                             android:id="@+id/rest_detail_show_images"
                             android:text="Show Images" />

                        <Button
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:backgroundTint="@color/button_blue"
                             android:layout_marginTop="8dp"
                             android:id="@+id/rest_detail_show_map"
                             android:text="Show On Map" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>