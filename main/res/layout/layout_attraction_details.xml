<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/white"
     tools:context=".AttractionDetails">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <ImageView
             android:layout_height="280dp"
             android:layout_width="match_parent"
             android:scaleType="centerCrop"
             android:id="@+id/attraction_detail_image" />

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textAlignment="center"
                 android:padding="16dp"
                 android:textSize="24sp"
                 android:textColor="@color/black"
                 android:id="@+id/attraction_detail_name"
                 android:text="Nature Park"
                 android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Facilities"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:orientation="vertical">

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="horizontal">

                        <ImageView
                             android:layout_height="24dp"
                             android:layout_width="24dp" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:layout_marginStart="8dp"
                             android:text="Available Dine ins" />

                    </LinearLayout>

                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:padding="8dp"
                         android:orientation="horizontal">

                        <ImageView
                             android:layout_height="24dp"
                             android:layout_width="24dp"
                             android:src="@drawable/ic_parking" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:layout_marginStart="8dp"
                             android:text="Parking Area" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Description"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="14sp"
                     android:textColor="@color/black"
                     android:id="@+id/attraction_detail_desc"
                     android:text="Duis tellus metus, elementum a lectus id, aliquet interdum mauris." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Expenses"
                    android:textStyle="bold" />

                <View
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/desc_color" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/attraction_detail_price"
                    android:text="Price Range: 721 to 1250 Rs" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Details" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                    android:id="@+id/attraction_detail_rating"
                     android:text="Rating: 4.2" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="14sp"
                     android:textColor="@color/black"
                     android:id="@+id/attraction_detail_best_time_visit"
                     android:text="Best Time to Visit: January to March" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Address"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/attraction_detail_address"
                     android:text="14321 Saddle Wood Dr, North Little Rock, AR, 72117" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Activities"
                    android:textStyle="bold" />

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/desc_color" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/attraction_detail_activities"
                    android:text="Sightseeing" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Amenities"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:id="@+id/attraction_detail_amenities"
                     android:text="Free WiFi, Parking" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Nearby Hotels"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="360dp"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:id="@+id/attraction_detail_nearby_hotels_recyclerview" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:id="@+id/attraction_detail_nearby_hotels_empty_tv"
                    android:text="No Hotels Found"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="Nearby Restaurants"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <androidx.recyclerview.widget.RecyclerView
                     android:layout_height="450dp"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:id="@+id/attraction_detail_nearby_restaurants_recyclerview" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:id="@+id/attraction_detail_nearby_restaurants_empty_tv"
                    android:text="No Restaurants Found"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_margin="8dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:textSize="18sp"
                     android:textColor="@color/black"
                     android:text="View More"
                     android:textStyle="bold" />

                <View
                     android:layout_height="1dp"
                     android:layout_width="match_parent"
                     android:background="@color/desc_color" />

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:padding="16dp"
                     android:orientation="vertical">

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:backgroundTint="@color/button_blue"
                         android:layout_marginTop="8dp"
                         android:id="@+id/attraction_detail_show_images"
                         android:text="Show Images" />

                    <Button
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:backgroundTint="@color/button_blue"
                         android:layout_marginTop="8dp"
                         android:id="@+id/attraction_detail_show_map"
                         android:text="Show On Map" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>